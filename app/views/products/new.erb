<h1>Create a product </h1>
<%= form_tag(@product, method: 'post') do %>
  <%= label_tag(:title, 'Title') %>
  <%= text_field(:product, :title) %>
  <%= text_field(:product, :price) %>
  <%= text_field(:product, :description) %>
  <%= text_field(:product, :category_id) %>
  <%= submit_tag('Create a product') %>
<% end %>
